# Configuration
gem 'json'
gem 'yaml'

# Logging
gem 'logger'

# CSV/Export
gem 'csv'

# Time handling
gem 'tzinfo'

# Testing (optional)
group :development do
  gem 'rspec'
  gem 'rubocop'
end
